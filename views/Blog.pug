extends layout

block content

  .blog-banner-section
    .banner-overlay
    .container
      .banner-content
        h1.page-title 
          | Our 
          span.gradient-text Blog
        p.banner-subtitle Insights, Updates & Stories from MaMo TechnoLabs
        .breadcrumb-nav
          a(href='/') Home
          span.separator /
          span.current Blog

  .blog-listing-section
    .container
      if !blogs || blogs.length === 0
        .no-blogs
          .no-blogs-icon
            svg(xmlns='http://www.w3.org/2000/svg' width='80' height='80' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='1.5')
              path(d='M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z')
              path(d='M9 7h6M9 11h6M9 15h3')
          h3 No blogs published yet
          p Check back soon for exciting content!
      else
        .blog-grid
          each blog in blogs
            .blog-card
              .blog-card-inner
                .blog-card-image
                  a(href=`/blog/${blog.slug}`)
                    img(src=blog.bannerImage || '/images/blog-page.png' alt=blog.title loading='lazy')
                    .image-overlay
                      .read-more-icon
                        svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
                          path(d='M5 12h14M12 5l7 7-7 7')
                .blog-card-content
                  .blog-meta
                    .blog-card-date
                      svg(xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
                        rect(x='3' y='4' width='18' height='18' rx='2' ry='2')
                        line(x1='16' y1='2' x2='16' y2='6')
                        line(x1='8' y1='2' x2='8' y2='6')
                        line(x1='3' y1='10' x2='21' y2='10')
                      span= new Date(blog.createdAt).toDateString()
                  h3.blog-card-title
                    a(href=`/blog/${blog.slug}`)= blog.title
                  if blog.metaDescription
                    - var description = blog.metaDescription.length > 120 ? blog.metaDescription.substring(0, 120) + '...' : blog.metaDescription
                    p.blog-card-excerpt= description
                  a.blog-card-link(href=`/blog/${blog.slug}`)
                    span Read Full Article
                    svg(xmlns='http://www.w3.org/2000/svg' width='18' height='18' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
                      path(d='M5 12h14M12 5l7 7-7 7')

  style.
    /* Blog Banner Section */
    .blog-banner-section {
      position: relative;
      background: #ffffff;
      padding: 120px 0 80px;
      width: 100%;
      overflow: hidden;
      border-bottom: 1px solid #e9ecef;
    }
    
    .blog-banner-section::before {
      display: none;
    }
    
    .banner-overlay {
      display: none;
    }
    
    .blog-banner-section .container {
      max-width: 1140px;
      margin: 0 auto;
      padding: 0 15px;
      position: relative;
      z-index: 1;
    }
    
    .banner-content {
      text-align: center;
    }
    
    .page-title {
      font-size: 3.5rem;
      margin: 0 0 20px 0;
      color: #1a1a1a;
      font-weight: 600;
      letter-spacing: -1px;
      line-height: 1.2;
    }
    
    .gradient-text {
      color: #1a1a1a;
      background: none;
      -webkit-background-clip: unset;
      -webkit-text-fill-color: unset;
      background-clip: unset;
    }
    
    .banner-subtitle {
      color: #666;
      font-size: 1.25rem;
      margin-bottom: 30px;
      font-weight: 400;
    }
    
    .breadcrumb-nav {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      flex-wrap: wrap;
      font-size: 1rem;
    }
    
    .breadcrumb-nav a {
      color: #666;
      text-decoration: none;
      transition: all 0.3s ease;
      font-weight: 500;
    }
    
    .breadcrumb-nav a:hover {
      color: #00ED87;
      transform: translateY(-2px);
    }
    
    .breadcrumb-nav .separator {
      color: #999;
    }
    
    .breadcrumb-nav .current {
      color: #1a1a1a;
      font-weight: 600;
    }
    
    /* Blog Listing Section */
    .blog-listing-section {
      padding: 100px 0;
      width: 100%;
      background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
      position: relative;
    }
    
    .blog-listing-section::before {
      content: '';
      position: absolute;
      top: -50px;
      left: 0;
      right: 0;
      height: 100px;
      background: linear-gradient(180deg, transparent 0%, #f8f9fa 100%);
    }
    
    .blog-listing-section .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
      position: relative;
      z-index: 1;
    }
    
    /* Blog Grid */
    .blog-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 40px;
      margin-top: 20px;
    }
    
    /* No Blogs State */
    .no-blogs {
      grid-column: 1 / -1;
      text-align: center;
      padding: 80px 20px;
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
    }
    
    .no-blogs-icon {
      margin-bottom: 30px;
      color: #00ED87;
    }
    
    .no-blogs-icon svg {
      width: 100px;
      height: 100px;
      stroke: url(#gradient);
    }
    
    .no-blogs h3 {
      color: #333;
      font-size: 2rem;
      margin-bottom: 15px;
      font-weight: 700;
    }
    
    .no-blogs p {
      color: #666;
      font-size: 1.1rem;
    }
    
    /* Blog Card */
    .blog-card {
      background: white;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      flex-direction: column;
      height: 100%;
      position: relative;
      animation: fadeInUp 0.6s ease forwards;
      opacity: 0;
    }
    
    .blog-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #00ED87 0%, #034EA2 100%);
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.4s ease;
    }
    
    .blog-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 50px rgba(0, 237, 135, 0.15);
    }
    
    .blog-card:hover::before {
      transform: scaleX(1);
    }
    
    .blog-card-inner {
      display: flex;
      flex-direction: column;
      height: 100%;
    }
    
    /* Blog Card Image */
    .blog-card-image {
      width: 100%;
      height: 260px;
      overflow: hidden;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }
    
    .blog-card-image a {
      display: block;
      width: 100%;
      height: 100%;
      position: relative;
      overflow: hidden;
    }
    
    .blog-card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .blog-card:hover .blog-card-image img {
      transform: scale(1.1);
    }
    
    .image-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(0, 237, 135, 0.9) 0%, rgba(3, 78, 162, 0.9) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.4s ease;
    }
    
    .blog-card:hover .image-overlay {
      opacity: 1;
    }
    
    .read-more-icon {
      width: 60px;
      height: 60px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transform: scale(0.8);
      transition: transform 0.3s ease;
    }
    
    .blog-card:hover .read-more-icon {
      transform: scale(1);
    }
    
    .read-more-icon svg {
      color: #00ED87;
    }
    
    /* Blog Card Content */
    .blog-card-content {
      padding: 30px;
      display: flex;
      flex-direction: column;
      flex-grow: 1;
      background: white;
    }
    
    .blog-meta {
      margin-bottom: 20px;
    }
    
    .blog-card-date {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      color: #00ED87;
      font-size: 0.9rem;
      font-weight: 600;
      padding: 8px 16px;
      background: linear-gradient(90deg, rgba(0, 237, 135, 0.1) 0%, rgba(3, 78, 162, 0.1) 100%);
      border-radius: 20px;
      transition: all 0.3s ease;
    }
    
    .blog-card:hover .blog-card-date {
      background: linear-gradient(90deg, rgba(0, 237, 135, 0.2) 0%, rgba(3, 78, 162, 0.2) 100%);
      transform: translateX(5px);
    }
    
    .blog-card-date svg {
      width: 16px;
      height: 16px;
    }
    
    .blog-card-title {
      margin: 0 0 15px 0;
      font-size: 1.5rem;
      line-height: 1.4;
      font-weight: 700;
      min-height: 65px;
    }
    
    .blog-card-title a {
      color: #1a1a1a;
      text-decoration: none;
      transition: all 0.3s ease;
      background: linear-gradient(90deg, #00ED87 0%, #034EA2 100%);
      background-size: 0% 2px;
      background-repeat: no-repeat;
      background-position: left bottom;
      padding-bottom: 2px;
    }
    
    .blog-card:hover .blog-card-title a {
      background-size: 100% 2px;
    }
    
    .blog-card-excerpt {
      color: #666;
      line-height: 1.7;
      margin: 0 0 25px 0;
      flex-grow: 1;
      font-size: 1rem;
    }
    
    /* Blog Card Link */
    .blog-card-link {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      color: #00ED87;
      font-weight: 700;
      text-decoration: none;
      font-size: 1rem;
      margin-top: auto;
      padding: 12px 24px;
      border: 2px solid transparent;
      border-radius: 30px;
      background: linear-gradient(white, white) padding-box,
                  linear-gradient(90deg, #00ED87 0%, #034EA2 100%) border-box;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      align-self: flex-start;
    }
    
    .blog-card-link::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(90deg, #00ED87 0%, #034EA2 100%);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: -1;
    }
    
    .blog-card-link:hover {
      color: white;
      transform: translateX(5px);
    }
    
    .blog-card-link:hover::before {
      opacity: 1;
    }
    
    .blog-card-link svg {
      transition: transform 0.3s ease;
    }
    
    .blog-card-link:hover svg {
      transform: translateX(5px);
    }
    
    /* Responsive Design */
    @media (max-width: 1200px) {
      .blog-grid {
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 35px;
      }
    }
    
    @media (max-width: 992px) {
      .page-title {
        font-size: 3rem;
      }
      
      .blog-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
      }
      
      .blog-listing-section {
        padding: 80px 0;
      }
    }
    
    @media (max-width: 768px) {
      .blog-banner-section {
        padding: 100px 0 60px;
      }
      
      .page-title {
        font-size: 2.5rem;
      }
      
      .banner-subtitle {
        font-size: 1.1rem;
      }
      
      .blog-listing-section {
        padding: 60px 0;
      }
      
      .blog-grid {
        gap: 25px;
      }
      
      .blog-card-title {
        font-size: 1.3rem;
        min-height: auto;
      }
      
      .blog-card-content {
        padding: 25px;
      }
    }
    
    @media (max-width: 576px) {
      .blog-banner-section {
        padding: 80px 0 50px;
      }
      
      .page-title {
        font-size: 2rem;
      }
      
      .banner-subtitle {
        font-size: 1rem;
        margin-bottom: 20px;
      }
      
      .breadcrumb-nav {
        font-size: 0.9rem;
      }
      
      .blog-listing-section {
        padding: 50px 0;
      }
      
      .blog-grid {
        grid-template-columns: 1fr;
        gap: 25px;
      }
      
      .blog-card-image {
        height: 220px;
      }
      
      .blog-card-title {
        font-size: 1.25rem;
      }
      
      .blog-card-content {
        padding: 20px;
      }
      
      .blog-card-excerpt {
        font-size: 0.95rem;
      }
      
      .blog-card-link {
        padding: 10px 20px;
        font-size: 0.9rem;
      }
      
      .no-blogs {
        padding: 60px 20px;
      }
      
      .no-blogs h3 {
        font-size: 1.5rem;
      }
      
      .no-blogs p {
        font-size: 1rem;
      }
    }
    
    /* Simple fade-in animation */
    .blog-card {
      animation: fadeInUp 0.6s ease forwards;
      opacity: 0;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Stagger animation for multiple cards */
    .blog-card:nth-child(1) { animation-delay: 0.1s; }
    .blog-card:nth-child(2) { animation-delay: 0.2s; }
    .blog-card:nth-child(3) { animation-delay: 0.3s; }
    .blog-card:nth-child(4) { animation-delay: 0.4s; }
    .blog-card:nth-child(5) { animation-delay: 0.5s; }
    .blog-card:nth-child(6) { animation-delay: 0.6s; }
    .blog-card:nth-child(n+7) { animation-delay: 0.7s; }

