    .blog-detail-title {
      font-size: 3.5rem;
      line-height: 1.2;
      margin: 0 0 30px 0;
      color: #1a1a1a;
      font-weight: 600;
      letter-spacing: -1px;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .blog-detail-meta {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 30px;
      flex-wrap: wrap;
      margin-bottom: 30px;
    }
    
    .meta-item {
      display: flex;
      align-items: center;
      gap: 8px;
      color: #666;
      font-size: 1rem;
      font-weight: 500;
    }
    
    .meta-item svg {
      width: 18px;
      height: 18px;
    }
    
    .breadcrumb-nav {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      flex-wrap: wrap;
      font-size: 1rem;
    }
    
    .breadcrumb-nav a {
      color: #666;
      text-decoration: none;
      transition: all 0.3s ease;
      font-weight: 500;
    }
    
    .breadcrumb-nav a:hover {
      color: #00ED87;
      transform: translateY(-2px);
    }
    
    .breadcrumb-nav .separator {
      color: #999;
    }
    
    .breadcrumb-nav .current {
      color: #1a1a1a;
      font-weight: 600;
    }
    
    /* Blog Detail Content */
    .blog-detail-content {
      padding: 80px 0;
      background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
      position: relative;
    }
    
    .blog-detail-content::before {
      content: '';
      position: absolute;
      top: -50px;
      left: 0;
      right: 0;
      height: 100px;
      background: linear-gradient(180deg, transparent 0%, #f8f9fa 100%);
    }
    
    .blog-detail-content .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 15px;
      position: relative;
      z-index: 1;
    }
    
    .content-wrapper {
      display: grid;
      grid-template-columns: 1fr 320px;
      gap: 40px;
      align-items: start;
    }
    
    /* Main Content */
    .main-content {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
      overflow: hidden;
    }
    
    .featured-image-wrapper {
      position: relative;
      width: 100%;
      max-height: 500px;
      overflow: hidden;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .featured-image-wrapper img {
      width: 100%;
      height: 100%;
      max-height: 500px;
      object-fit: cover;
      display: block;
    }
    
    .image-caption {
      position: absolute;
      bottom: 20px;
      right: 20px;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(10px);
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
    }
    
    .blog-intro {
      padding: 40px;
      background: linear-gradient(135deg, rgba(0, 237, 135, 0.05) 0%, rgba(3, 78, 162, 0.05) 100%);
      border-left: 4px solid #00ED87;
      margin: 40px 0 0 0;
      display: flex;
      gap: 20px;
      align-items: flex-start;
    }
    
    .intro-icon {
      flex-shrink: 0;
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, #00ED87 0%, #034EA2 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
    }
    
    .intro-icon svg {
      width: 24px;
      height: 24px;
    }
    
    .blog-intro p {
      margin: 0;
      font-size: 1.15rem;
      line-height: 1.7;
      color: #333;
      font-weight: 500;
    }
    
    .article-content {
      padding: 50px 40px;
      line-height: 1.8;
      color: #444;
      font-size: 1.05rem;
    }
    
    .article-content h1:first-child,
    .article-content h2:first-child,
    .article-content h3:first-child,
    .article-content h4:first-child,
    .article-content h5:first-child,
    .article-content h6:first-child,
    .article-content p:first-child {
      margin-top: 0;
    }
    
    .article-content h1 {
      font-size: 2.2rem;
      margin-top: 50px;
      margin-bottom: 25px;
      color: #1a1a1a;
      font-weight: 700;
      line-height: 1.3;
      position: relative;
      padding-bottom: 15px;
    }
    
    .article-content h1::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 60px;
      height: 4px;
      background: linear-gradient(90deg, #00ED87 0%, #034EA2 100%);
      border-radius: 2px;
    }
    
    .article-content h2 {
      font-size: 1.9rem;
      margin-top: 45px;
      margin-bottom: 20px;
      color: #1a1a1a;
      font-weight: 700;
      line-height: 1.3;
    }
    
    .article-content h3 {
      font-size: 1.6rem;
      margin-top: 40px;
      margin-bottom: 18px;
      color: #1a1a1a;
      font-weight: 600;
      line-height: 1.4;
    }
    
    .article-content h4 {
      font-size: 1.35rem;
      margin-top: 35px;
      margin-bottom: 15px;
      color: #333;
      font-weight: 600;
      line-height: 1.4;
    }
    
    .article-content h5 {
      font-size: 1.2rem;
      margin-top: 30px;
      margin-bottom: 12px;
      color: #333;
      font-weight: 600;
      line-height: 1.4;
    }
    
    .article-content h6 {
      font-size: 1.1rem;
      margin-top: 25px;
      margin-bottom: 10px;
      color: #444;
      font-weight: 600;
      line-height: 1.4;
    }
    
    .article-content p {
      margin-bottom: 25px;
      line-height: 1.8;
    }
    
    .article-content img {
      max-width: 100%;
      height: auto;
      border-radius: 12px;
      margin: 30px 0;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }
    
    .article-content ul,
    .article-content ol {
      margin: 25px 0;
      padding-left: 30px;
    }
    
    .article-content li {
      margin-bottom: 12px;
      line-height: 1.7;
    }
    
    .article-content a {
      color: #00ED87;
      text-decoration: none;
      font-weight: 600;
      border-bottom: 2px solid transparent;
      transition: border-color 0.3s ease;
    }
    
    .article-content a:hover {
      border-bottom-color: #00ED87;
    }
    
    .article-content blockquote {
      border-left: 4px solid #00ED87;
      padding: 20px 30px;
      margin: 30px 0;
      background: #f8f9fa;
      border-radius: 0 8px 8px 0;
      font-style: italic;
      color: #555;
      font-size: 1.1rem;
    }
    
    .article-content code {
      background: #f4f4f4;
      padding: 3px 8px;
      border-radius: 4px;
      font-family: 'Courier New', monospace;
      font-size: 0.9em;
      color: #e83e8c;
    }
    
    .article-content pre {
      background: #1a1a1a;
      color: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
      overflow-x: auto;
      margin: 25px 0;
    }
    
    .article-content pre code {
      background: none;
      color: inherit;
      padding: 0;
    }
    
    /* Share Section */
    .share-section {
      padding: 40px;
      border-top: 2px solid #f0f0f0;
      background: #fafafa;
    }
    
    .share-header {
      display: flex;
      align-items: center;
      gap: 20px;
      margin-bottom: 25px;
    }
    
    .share-header h3 {
      margin: 0;
      font-size: 1.5rem;
      color: #1a1a1a;
      font-weight: 700;
      white-space: nowrap;
    }
    
    .share-line {
      flex: 1;
      height: 2px;
      background: linear-gradient(90deg, #00ED87 0%, transparent 100%);
    }
    
    .social-share-buttons {
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
    }
    
    .social-share-btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 12px 24px;
      border-radius: 30px;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      color: white;
    }
    
    .social-share-btn .filled {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      opacity: 0.9;
      transition: opacity 0.3s ease;
    }
    
    .social-share-btn:hover .filled {
      opacity: 1;
    }
    
    .social-share-btn svg,
    .social-share-btn span {
      position: relative;
      z-index: 1;
    }
    
    .social-share-btn.facebook {
      background: #4267B2;
    }
    
    .social-share-btn.linkedin {
      background: #0077B5;
    }
    
    .social-share-btn.instagram {
      background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    }
    
    .social-share-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    
    /* Sidebar */
    .sidebar {
      position: sticky;
      top: 100px;
      display: flex;
      flex-direction: column;
      gap: 25px;
    }
    
    .sidebar-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .sidebar-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
    }
    
    .card-header {
      padding: 25px;
      background: linear-gradient(135deg, #00ED87 0%, #034EA2 100%);
      color: white;
    }
    
    .card-header h3 {
      margin: 0 0 10px 0;
      font-size: 1.3rem;
      font-weight: 700;
    }
    
    .header-line {
      width: 50px;
      height: 3px;
      background: rgba(255, 255, 255, 0.5);
      border-radius: 2px;
    }
    
    .follow-social-links {
      padding: 25px;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    
    .follow-social-link {
      display: flex;
      align-items: center;
      gap: 15px;
      padding: 15px;
      border-radius: 12px;
      text-decoration: none;
      transition: all 0.3s ease;
      background: #f8f9fa;
      color: #333;
      font-weight: 600;
    }
    
    .follow-social-link:hover {
      transform: translateX(5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .icon-wrapper {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      color: white;
    }
    
    .icon-wrapper svg {
      width: 20px;
      height: 20px;
    }
    
    .follow-social-link.linkedin .icon-wrapper {
      background: #0077B5;
    }
    
    .follow-social-link.facebook .icon-wrapper {
      background: #4267B2;
    }
    
    .follow-social-link.instagram .icon-wrapper {
      background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    }
    
    .follow-social-link:hover.linkedin {
      background: rgba(0, 119, 181, 0.1);
    }
    
    .follow-social-link:hover.facebook {
      background: rgba(66, 103, 178, 0.1);
    }
    
    .follow-social-link:hover.instagram {
      background: linear-gradient(45deg, rgba(240, 148, 51, 0.1) 0%, rgba(188, 24, 136, 0.1) 100%);
    }
    
    .back-card {
      padding: 0;
    }
    
    .back-to-blog {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      padding: 20px;
      text-decoration: none;
      color: white;
      background: linear-gradient(135deg, #00ED87 0%, #034EA2 100%);
      font-weight: 700;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    .back-to-blog:hover {
      background: linear-gradient(135deg, #034EA2 0%, #00ED87 100%);
    }
    
    .back-to-blog svg {
      width: 20px;
      height: 20px;
    }
    
    /* Responsive Design */
    @media (max-width: 992px) {
      .content-wrapper {
        grid-template-columns: 1fr;
      }
      
      .sidebar {
        position: static;
        grid-row: 1;
      }
      
      .main-content {
        grid-row: 2;
      }
      
      .blog-detail-title {
        font-size: 2.8rem;
      }
    }
    
    @media (max-width: 768px) {
      .blog-detail-banner {
        padding: 120px 0 80px;
      }
      
      .blog-detail-title {
        font-size: 2.2rem;
      }
      
      .blog-detail-meta {
        gap: 20px;
      }
      
      .meta-item {
        font-size: 0.9rem;
      }
      
      .blog-detail-content {
        padding: 60px 0;
      }
      
      .blog-intro {
        padding: 30px 25px;
        flex-direction: column;
        gap: 15px;
      }
      
      .article-content {
        padding: 40px 25px;
      }
      
      .article-content h1 {
        font-size: 1.8rem;
      }
      
      .article-content h2 {
        font-size: 1.6rem;
      }
      
      .article-content h3 {
        font-size: 1.4rem;
      }
      
      .article-content h4 {
        font-size: 1.25rem;
      }
      
      .article-content h5,
      .article-content h6 {
        font-size: 1.1rem;
      }
      
      .share-section {
        padding: 30px 25px;
      }
      
      .social-share-buttons {
        flex-direction: column;
      }
      
      .social-share-btn {
        justify-content: center;
      }
      
      .sidebar {
        flex-direction: row;
        overflow-x: auto;
      }
      
      .sidebar-card {
        min-width: 280px;
      }
    }
    
    @media (max-width: 576px) {
      .blog-detail-banner {
        padding: 100px 0 60px;
      }
      
      .blog-detail-title {
        font-size: 1.8rem;
      }
      
      .category-badge {
        font-size: 0.85rem;
        padding: 6px 16px;
      }
      
      .blog-detail-meta {
        flex-direction: column;
        gap: 12px;
      }
      
      .breadcrumb-nav {
        font-size: 0.9rem;
      }
      
      .blog-detail-content {
        padding: 50px 0;
      }
      
      .blog-intro {
        padding: 25px 20px;
      }
      
      .blog-intro p {
        font-size: 1rem;
      }
      
      .article-content {
        padding: 30px 20px;
        font-size: 1rem;
      }
      
      .article-content h1 {
        font-size: 1.6rem;
        margin-top: 35px;
      }
      
      .article-content h2 {
        font-size: 1.4rem;
        margin-top: 30px;
      }
      
      .article-content h3 {
        font-size: 1.25rem;
        margin-top: 25px;
      }
      
      .article-content h4,
      .article-content h5,
      .article-content h6 {
        font-size: 1.1rem;
        margin-top: 20px;
      }
      
      .share-section {
        padding: 25px 20px;
      }
      
      .share-header h3 {
        font-size: 1.25rem;
      }
      
      .social-share-btn {
        padding: 10px 20px;
        font-size: 0.9rem;
      }
      
      .sidebar {
        flex-direction: column;
      }
      
      .sidebar-card {
        min-width: auto;
      }
    }
