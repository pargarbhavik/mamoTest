extends layout

block content

  // JSON-LD Schema for Article
  script(type="application/ld+json").
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "#{blog.title}",
      "description": "#{blog.metaDescription || ''}",
      "image": "#{blog.bannerImage ? (blog.bannerImage.startsWith('http') ? blog.bannerImage : 'http://localhost:3001' + blog.bannerImage) : ''}",
      "author": {
        "@type": "Organization",
        "name": "#{blog.author || 'MaMo TechnoLabs'}",
        "url": "http://localhost:3001"
      },
      "publisher": {
        "@type": "Organization",
        "name": "#{blog.publisher ? blog.publisher.name : 'MaMo TechnoLabs'}",
        "logo": {
          "@type": "ImageObject",
          "url": "http://localhost:3001#{blog.publisher && blog.publisher.logo ? blog.publisher.logo : '/images/logo.png'}"
        }
      },
      "datePublished": "#{blog.createdAt.toISOString()}",
      "dateModified": "#{blog.updatedAt ? blog.updatedAt.toISOString() : blog.createdAt.toISOString()}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "#{blog.canonicalUrl || ''}"
      },
      "keywords": "#{blog.focusKeywords ? blog.focusKeywords.join(', ') : ''}"
    }

  // Page Banner
  .blog-detail-banner
    .banner-overlay
    .container
      .banner-content
        .blog-category
          span.category-badge
            svg(xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
              path(d='M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z')
              line(x1='7' y1='7' x2='7.01' y2='7')
            | Technology
        h1.blog-detail-title= blog.title
        .blog-detail-meta
          .meta-item
            svg(xmlns='http://www.w3.org/2000/svg' width='18' height='18' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
              rect(x='3' y='4' width='18' height='18' rx='2' ry='2')
              line(x1='16' y1='2' x2='16' y2='6')
              line(x1='8' y1='2' x2='8' y2='6')
              line(x1='3' y1='10' x2='21' y2='10')
            span= new Date(blog.createdAt).toDateString()
          .meta-item
            svg(xmlns='http://www.w3.org/2000/svg' width='18' height='18' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
              circle(cx='12' cy='12' r='10')
              polyline(points='12 6 12 12 16 14')
            span 5 min read
        .breadcrumb-nav
          a(href='/') Home
          span.separator /
          a(href='/blog') Blog
          span.separator /
          span.current Article

  .blog-detail-content
    .container
      .content-wrapper
        .main-content
          if blog.bannerImage
            .featured-image-wrapper
              img(src=blog.bannerImage alt=blog.title loading='lazy')
              .image-caption MaMo TechnoLabs

          if blog.metaDescription
            .blog-intro
              .intro-icon
                svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2')
                  circle(cx='12' cy='12' r='10')
                  line(x1='12' y1='16' x2='12' y2='12')
                  line(x1='12' y1='8' x2='12.01' y2='8')
              p= blog.metaDescription

          .article-content
