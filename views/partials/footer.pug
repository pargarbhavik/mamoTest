  style.
    .modern-footer-wrapper {
      background: #010101;
      position: relative;
      overflow: hidden;
    }
    
    .modern-footer-wrapper .container {
      max-width: 1200px;
      margin: 0 auto;
      width: 100%;
    }
    
    .modern-footer-wrapper::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      opacity: 1;
    }
    
    .footer-cta-section {
      padding: 80px 0;
      text-align: center;
      position: relative;
      z-index: 1;
    }
    
    .cta-content {
      max-width: 700px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    .cta-title {
      font-size: 2.8rem;
      font-weight: 800;
      color: white;
      margin: 0 0 15px 0;
      line-height: 1.2;
    }
    
    .cta-subtitle {
      font-size: 1.2rem;
      color: rgba(255, 255, 255, 0.85);
      margin: 0 0 35px 0;
    }
    
    .cta-button {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background: #00ED87;
      color: #ffffff;
      padding: 16px 40px;
      border-radius: 50px;
      font-size: 1.1rem;
      font-weight: 700;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(0, 237, 135, 0.3);
    }
    
    .cta-button:hover {
      background: #00D67A;
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(0, 237, 135, 0.4);
      color: #ffffff;
    }
    
    .cta-button svg {
      transition: transform 0.3s ease;
    }
    
    .cta-button:hover svg {
      transform: translateX(5px);
    }
    
    .footer-main {
      padding: 60px 0 40px;
      position: relative;
      z-index: 1;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .footer-main .container {
      padding: 0 20px;
    }
    
    .footer-grid {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr 1.5fr;
      gap: 50px;
    }
    
    .footer-column {
      color: white;
      margin:15px;
    }
    
    .footer-logo {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 20px;
    }
    
    .footer-logo img {
      border-radius: 12px;
    }
    
    .company-name {
      font-size: 1.3rem;
      font-weight: 700;
      color: white;
    }
    
    .footer-description {
      color: rgba(255, 255, 255, 0.75);
      line-height: 1.7;
      margin-bottom: 25px;
      font-size: 0.95rem;
    }
    
    .social-links {
      display: flex;
      gap: 12px;
    }
    
    .social-links a {
      width: 40px;
      height: 40px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      backdrop-filter: blur(10px);
    }
    
    .social-links a:hover {
      background: #00ED87;
      transform: translateY(-3px);
    }
    
    .social-links a svg {
      fill: white;
    }
    
    .social-links a:hover svg {
      fill: #ffffff;
    }
    
    .footer-heading {
      font-size: 1.2rem;
      font-weight: 700;
      color: white;
      margin: 0 0 25px 0;
    }
    
    .footer-links {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .footer-links li {
      margin-bottom: 12px;
    }
    
    .footer-links a {
      color: rgba(255, 255, 255, 0.75);
      text-decoration: none;
      font-size: 0.95rem;
      transition: all 0.3s ease;
      display: inline-block;
    }
    
    .footer-links a:hover {
      color: #00ED87;
      transform: translateX(5px);
    }
    
    .contact-item {
      display: flex;
      gap: 12px;
      margin-bottom: 20px;
      align-items: flex-start;
    }
    
    .contact-item svg {
      flex-shrink: 0;
      stroke: #00ED87;
      margin-top: 2px;
    }
    
    .contact-item p {
      color: rgba(255, 255, 255, 0.75);
      margin: 0;
      font-size: 0.9rem;
      line-height: 1.6;
    }
    
    .contact-item a {
      color: rgba(255, 255, 255, 0.75);
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    .contact-item a:hover {
      color: #00ED87;
    }
    
    .footer-bottom {
      padding: 25px 0;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      z-index: 1;
    }
    
    .footer-bottom .container {
      padding: 0 20px;
    }
    
    .bottom-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }
    
    .copyright {
      color: rgba(255, 255, 255, 0.6);
      margin: 0;
      font-size: 0.9rem;
    }
    
    .footer-links-bottom {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .footer-links-bottom a {
      color: rgba(255, 255, 255, 0.6);
      text-decoration: none;
      font-size: 0.9rem;
      transition: color 0.3s ease;
    }
    
    .footer-links-bottom a:hover {
      color: #00ED87;
    }
    
    .separator {
      color: rgba(255, 255, 255, 0.3);
    }
    
    @media (max-width: 1024px) {
      .footer-grid {
        grid-template-columns: 1fr 1fr;
        gap: 40px;
      }
      
      .footer-about {
        grid-column: 1 / -1;
      }
    }
    
    @media (max-width: 768px) {
      .footer-cta-section {
        padding: 60px 0;
      }
      
      .cta-content {
        padding: 0 20px;
      }
      
      .cta-title {
        font-size: 2rem;
      }
      
      .cta-subtitle {
        font-size: 1rem;
      }
      
      .cta-button {
        padding: 14px 32px;
        font-size: 1rem;
      }
      
      .footer-main {
        padding: 40px 0 30px;
      }
      
      .footer-main .container {
        padding: 0 20px;
      }
      
      .footer-grid {
        grid-template-columns: 1fr;
        gap: 35px;
      }
      
      .footer-about {
        margin: 15px;
        grid-column: 1;
      }
      
      .footer-bottom .container {
        padding: 0 20px;
      }
      
      .bottom-content {
        flex-direction: column;
        text-align: center;
      }
    }
    
    @media (max-width: 576px) {
      .footer-cta-section {
        padding: 50px 0;
      }
      
      .cta-content {
        padding: 0 15px;
      }
      
      .cta-title {
        font-size: 1.6rem;
      }
      
      .footer-main .container {
        padding: 0 15px;
      }
      
      .footer-bottom .container {
        padding: 0 15px;
      }
      
      .footer-links-bottom {
        flex-direction: column;
        gap: 10px;
      }
      
      .separator {
        display: none;
      }
    }
