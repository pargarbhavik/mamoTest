  style.
    .policy-content {
      background: #ffffff;
      padding: 50px;
      border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.06);
    }
    .policy-content .last-updated {
      color: #6b7280;
      font-size: 14px;
      margin-bottom: 25px;
    }
    .policy-content h3 {
      font-size: 24px;
      color: #111827;
      margin-top: 35px;
      margin-bottom: 15px;
      font-weight: 600;
    }
    .policy-content p {
      color: #4b5563;
      font-size: 16px;
      line-height: 1.8;
      margin-bottom: 20px;
    }
    .policy-content ul {
      margin-left: 25px;
      margin-bottom: 20px;
    }
    .policy-content ul li {
      color: #4b5563;
      font-size: 16px;
      line-height: 1.8;
      margin-bottom: 10px;
    }
    .policy-content a {
      color: #1fa97f;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    .policy-content a:hover {
      color: #0b3c3f;
      text-decoration: underline;
    }
    @media (max-width: 768px) {
      .policy-content {
        padding: 30px 20px;
      }
      .policy-content h3 {
        font-size: 20px;
      }
      .policy-content p,
      .policy-content ul li {
        font-size: 15px;
      }
    }
